<h1>Followed Users</h1>

    <table class='table'>
      <% if @users.exists? %>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <% @users.each do |user| %>
        <tbody>
          <tr>
          	<td><%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></td>
            <td><%= user.name %></td>
            <td>フォロー数: <%= user.followers.count %></td>
            <td>フォロワー数: <%= user.followers.count %></td>
            <td><%= link_to 'Show', user_path(user), class: "user_#{user.id}" %></td>
          </tr>
        </tbody>
      <% end %>
    <% else %>
    <p>ユーザーはいません</p>
    <% end %>
</table>